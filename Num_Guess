#include<iostream>
#include<cstdlib>
#include<ctime>

using namespace std;

int main(){
    int num;
    int guess;
    int tries =0;

    srand(time(NULL));
    num = (rand() % 100) + 1 ;

    cout << "*******NUMBER GUESSING GAME********\n";

    do{
        cout << "Enter Your Guess between (1-100): ";
        cin >> guess;
        tries++;

        if(guess > num){
            cout << "Too HIigh!\n";
        }
        else if(guess < num){
            cout << "Too Low!\n";
        }
        else{
            cout << "CORRECT! Tries: "  << tries << endl ;
        }
    }while(guess!=num);

    cout << "**************************************\n";

    return 0;
}
